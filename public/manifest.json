{
  "manifest_version": 2,
  "name": "Copy Text",
  "version": "0.0.1",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "browser_action": {},

  "permissions": [
    "tabs"
  ]
}
